<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/margin_4dp"
    tools:background="@color/main_background">

    <ImageView
        android:id="@+id/actor_photo"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:background="@drawable/poster_border"
        android:padding="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_height="150dp"
        tools:layout_width="100dp" />

    <TextView
        android:id="@+id/actor_name"
        android:layout_width="@dimen/zero_value"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8dp"
        android:gravity="start"
        android:text="Имя Фамилия актера"
        android:textColor="@color/neutral_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/actor_photo"
        app:layout_constraintTop_toTopOf="@id/actor_photo"
        tools:text="Имя Фамилия актера" />

    <TextView
        android:id="@+id/actor_birthdate"
        android:layout_width="@dimen/zero_value"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_4dp"
        android:layout_marginStart="@dimen/margin_8dp"
        android:gravity="start"
        android:text="Дата рождения: DD-MM-YYYY"
        android:textColor="@color/neutral_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/actor_photo"
        app:layout_constraintTop_toBottomOf="@id/actor_name"
        tools:text="Дата рождения: DD-MM-YYYY" />

    <TextView
        android:id="@+id/actor_birthplace"
        android:layout_width="@dimen/zero_value"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_4dp"
        android:layout_marginStart="@dimen/margin_8dp"
        android:gravity="start"
        android:text="Место рождения: Место рождения"
        android:textColor="@color/neutral_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/actor_photo"
        app:layout_constraintTop_toBottomOf="@id/actor_birthdate"
        tools:text="Место рождения: Место рождения" />

</androidx.constraintlayout.widget.ConstraintLayout>